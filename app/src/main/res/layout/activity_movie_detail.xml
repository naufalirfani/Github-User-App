<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_cons"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:background="@color/colorPrimary">
        <Button
            android:id="@+id/btn_detail_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_arrow_back_white_24dp"
            app:layout_constraintTop_toTopOf="@+id/detail_cons"
            app:layout_constraintLeft_toLeftOf="@+id/detail_cons"/>
        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:text="@string/detail_user"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="@+id/detail_cons"
            app:layout_constraintLeft_toRightOf="@+id/btn_detail_back"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            tools:src="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/btn_detail_back"
            app:layout_constraintLeft_toLeftOf="@+id/detail_cons"
            app:layout_constraintRight_toRightOf="@+id/detail_cons"
            app:layout_constraintBottom_toTopOf="@id/tv_detail_name"/>
        <TextView
            android:id="@+id/tv_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:text="@string/name"
            app:layout_constraintTop_toBottomOf="@id/img_photo"
            app:layout_constraintLeft_toLeftOf="@+id/detail_cons"
            app:layout_constraintRight_toRightOf="@+id/detail_cons"
            app:layout_constraintBottom_toTopOf="@id/tv_detail_company"/>
        <TextView
            android:id="@+id/tv_detail_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:text="@string/company"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_name"
            app:layout_constraintLeft_toLeftOf="@+id/detail_cons"
            app:layout_constraintRight_toRightOf="@+id/detail_cons"/>
        <TextView
            android:id="@+id/tv_detail_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:text="@string/location"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_company"
            app:layout_constraintLeft_toLeftOf="@+id/detail_cons"
            app:layout_constraintRight_toRightOf="@+id/detail_cons"/>
        <TextView
            android:id="@+id/tv_followers"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="1"
            android:gravity="center"
            android:textColor="#FFFFFF"
            tools:text="@string/followers"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_location"
            app:layout_constraintLeft_toLeftOf="@+id/detail_cons"
            app:layout_constraintRight_toLeftOf="@id/tv_following"/>
        <TextView
            android:id="@+id/tv_following"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:gravity="center"
            tools:text="@string/following"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_location"
            app:layout_constraintLeft_toRightOf="@id/tv_followers"
            app:layout_constraintRight_toLeftOf="@id/tv_detail_repo"/>
        <TextView
            android:id="@+id/tv_detail_repo"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:gravity="center"
            tools:text="@string/repositories"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_location"
            app:layout_constraintLeft_toRightOf="@id/tv_following"
            app:layout_constraintRight_toRightOf="@+id/detail_cons"/>
        <ProgressBar
            android:id="@+id/detail_progressbar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="@id/detail_cons"
            app:layout_constraintBottom_toBottomOf="@id/detail_cons"
            app:layout_constraintRight_toRightOf="@id/detail_cons"
            app:layout_constraintTop_toTopOf="@id/detail_cons" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        app:tabTextAppearance="@style/MyCustomTabText"
        app:tabTextColor="@android:color/white"
        app:tabIndicatorColor="@android:color/white"/>
    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>